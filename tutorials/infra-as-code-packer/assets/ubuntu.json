{
	"builders": [
		{
			"name": "docker",
			"type": "docker",
			"image": "ubuntu:16.04",
			"commit": true
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"script": "install_python.sh"
		},
		{
			"type": "ansible",
			"playbook_file": "playbook.yaml"
		}
	],
	"post-processors": [
		{
			"type": "docker-tag",
			"repository": "my-image",
			"tag": "1.0"
		}
	]
}